{% extends "base_private.html.twig" %}

{% block title %}Accounts{% endblock %}

{% block content %}

<div class="jumbotron green">
    <h1>Clients</h1>
    <hr>
</div>
<!-- jumbotron -->
<div class="row">
    <div class="col-md-6">
        <form  id="addclient" action="/owner_accounts" method="post">
            <div class="panel panel-info">
                <h4 class="panel-heading">Create New Account</h4>
                <div class="panel-body">
                    <div class="form-group">
                        <label  for="family_name">Family Name: </label>
                        <input id="family_name" class="form-control" type="text" name="family_name">
                        <label  for="parent_one_name">Parent/Guardian Name (primary): </label>
                        <input id="parent_one_name" class="form-control" type="text" name="parent_one_name">
                        <label  for="parent_two_name">Parent/Guardian Name (secondary): </label>
                        <input id="parent_two_name" class="form-control" type="text" name="parent_two_name">
                        <label  for="street_address">Street Address: </label>
                        <input id="street_address" class="form-control" type="text" name="street_address">
                        <label  for="phone_number">Phone Number: </label>
                        <input id="phone_number" class="form-control" type="number" name="phone_number">
                        <label  for="email_address">Email Address: </label>
                        <input id="email_address" class="form-control" type="email" name="email_address">
                        <input type="hidden" name="notes" value="First entry">
                        <input type="hidden" name="billing_history" value="First entry">
                        <input type="hidden" name="outstanding_balance" value="0">
                    </div>
                    <button class="btn btn-primary" type="submit">create new account</button>
                </div>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <form action="/search_input" method="post">
            <div class="form-group">
                <label for="search_input">Search for Client</label>
                <input class="form-control" type="text" name="search_input" placeholder=" search something...">
            </div>
        </form>
        <br>

        <div id="outer">
            <div class="inner">
                <form class="" action="index.html" method="post">
                    <button  type="submit" name="view_accounts" class="btn btn-info btn-sm" value="view">search accounts</button>
                </form>
            </div>
            <div class="inner">
                <form action="/owner_clients" method="post">
                    <button type="submit" name="view_accounts" class="btn btn-warning btn-sm" value="view">view accounts</button>
                </form>
            </div>
            <div class="inner">
                <form action="/owner_delete-clients" method="post">
                    <button type="submit" class="btn btn-danger btn-sm" name="delete_accounts">delete accounts</button>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
        {% if accounts is not empty %}
            <table class="table table-hover">
                <thead>
                    <th>Clients Name</th>
                </thead>
                <tbody>
                {% for account in accounts %}
                    <tr>
                        <td>
                            <a href="owner_accounts/{{account.getId}}">{{ account.getFamilyName}}</a>
                            <button type="button" class="btn btn-success" data-toggle="modal" data-target="#update_account_{{account.getId}}">Update</button>
                        </td>
                    </tr>
                    <!-- Update Modal -->
                    <div id="update_account_{{account.getId}}" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-lg">
                          <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Update Account: {{account.getFamilyName}}</h4>
                                </div>
                                <form action="/owner_account/{{account.getId}}/update" method="post">
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-xs-12">
                                                <div class="form-group">
                                                    <label for="family_name">Family Name</label><br>
                                                    <input class="form-control" id="family_name" type="text" name="family_name" value="{{account.getFamilyName}}"><br>
                                                </div>
                                                <div class="form-group">
                                                    <label for="parent_one_name">Parent/Guardian Name (primary):</label><br>
                                                    <input id="parent_one_name" class="form-control" type="text" name="parent_one_name" value="{{account.getParentOneName}}"><br>
                                                </div>
                                                <div class="form-group">
                                                    <label for="parent_two_name">Parent/Guardian Name (secondary):</label><br>
                                                    <input id="parent_two_name" class="form-control" type="text" name="parent_two_name" value="{{account.getParentTwoName}}"><br>
                                                </div>
                                                <div class="form-group">
                                                    <label for="street_address">Street Address:</label><br>
                                                    <input id="street_address" class="form-control" type="text" name="street_address" value="{{account.getStreetAddress}}"><br>
                                                </div>
                                                <div class="form-group">
                                                    <label for="phone_number">Phone Number:</label><br>
                                                    <input id="phone_number" class="form-control" type="number" name="phone_number" value="{{account.getPhoneNumber}}"><br>
                                                </div>
                                                <div class="form-group">
                                                    <label for="email_address">Email Address:</label><br>
                                                    <input id="email_address" class="form-control" type="email" name="email_address" value="{{account.getEmailAddress}}"><br>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-success">Save</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                </tbody>
            </table>
        {% endif %}
        </div>
    </div>
</div>
{% endblock %}
