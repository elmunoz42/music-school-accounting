{% extends "base_private.html.twig" %}

{% block title %}Teacher{% endblock %}

{% block content %}
<div class="jumbotron">
    <h1>{{ teacher.getName }}</h1>
    <hr>
</div>

<div class="row">
    <div class="col-md-4">
        <h3>Teacher Info:</h3>
        <hr>
        <h4 class="panel-heading">
        <table class="table table-hover">
            <thead>
                <th>Courses</th>
            </thead>
            <tbody>
                {% if courses is not empty %}
                    {% for course in courses %}
                    <tr>
                        <td><a href="../owner_courses/{{ course.getId }}">{{ course.getTitle }}</a></td>
                    </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
            <thead>
                <th>Instruments</th>
            </thead>
            <tbody>
                <tr>
                    <td>{{teacher.getInstrument}}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="col-md-4">
        <h3>Student Info:</h3>
        <hr>
        {% if students_teachers is not empty %}
            <h4 class="panel-heading">
            <table class="table table-hover">
                <thead>
                    <th>Name</th>
                </thead>
                <tbody>
                    {% for student in students_teachers %}
                    <tr>
                        <td><a href="/owner_students/{{ student.getId }}">{{ student.getName }}</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% endif %}
        <form action="/owner_teacher/{{ teacher.getId }}/assign" method="post">
            <label for="student_id">Assign a student</label>
            {% if students is not empty %}
            <select id="student_id" class="form-control" name="student_id">
                {% for student in students %}
                <option value="{{student.getId}}">{{student.getName}}</option>
                {% endfor %}
            </select>
            <button type="submit" name="button">submit</button>
            {% endif %}
        </form>
    </div>

    <div class="col-md-4">
        <h3>Add Notes:</h3>
        <hr>
        <form action="/owner_teachers/{{ teacher.getId }}/add_notes" method="post">
            <input name="_method" type="hidden" value="patch">
            <div class="form-group">
                <label class ="control-label" for="new_notes">Notes</label><br>
                <textarea class="form-control" name="new_notes" rows="10" cols="40"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-info btn-sm" name="button">Submit</button>
            </div>
        </form>
    </div>
</div>

<hr>
{% if notes_array is not empty %}
<div class="notes">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Note History:</th>
            </tr>
        </thead>
        <tbody>
        {% for note in notes_array %}
        <tr>
            <td><strong>{{ note }}</strong></td>
        </tr>
        {% endfor %}
    </tbody>
</div>
{% endif %}

{% endblock %}
