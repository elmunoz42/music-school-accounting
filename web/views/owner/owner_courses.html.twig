{% extends "base_private.html.twig" %}

{% block title %}CRM Music School{% endblock %}

{% block content %}

<div class="jumbotron">
    <h1>Courses</h1>
    <hr>
</div>

<div class="row">
    <div class="col-md-6">
        <form action="/owner_courses" method="post">
            <div class="panel panel-info" id="add_course">
                <h3 for="course_title" class="panel-heading">Add New Course</h3><br>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="new_course">Course Name</label>
                    <input class="form-control" type="text" name="course_title" required><br>
                    <button class="btn btn-info" type="submit">Submit</button><br>
                    </div>
                </div>
            </div>
        </form>
    </div>
    {% if courses is not empty %}
    <div class="col-md-4" id="courses-table">
        <h3>Current Courses</h3>
        <table class="table table-hover">
            <thead>
                <th>Course Name</th>
            </thead>
            <tbody>
                {% for course in courses %}
                <tr>
                    <td>
                        <a href="owner_courses/{{course.getId}}">{{course.getTitle}}</a>
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#update_course_{{course.getId}}">Update</button>
                        <form action="/owner_courses/{{ course.getId }}/delete" method="post">
                            <input name="_method" type="hidden" value="delete">
                            <button type="submit" class="btn btn-danger btn-sm" name="button">Delete</button>
                        </form>
                    </td>

                    <!-- Update Modal -->
                    <div id="update_course_{{course.getId}}" class="modal fade" role="dialog">
                        <div class="modal-dialog modal-lg">
                          <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Update Course: {{course.getTitle}}</h4>
                                </div>
                                <form action="/owner_courses/{{course.getId}}/update" method="post">
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="col-xs-12">
                                              <div class="form-group">
                                                  <label for="title">Course Name</label>
                                                  <input type="text" id="title" class="form-control" name="title" value="{{course.getTitle()}}" placeholder="{{course.getTitle()}}">
                                              </div>
                                                <div class="modal-footer">
                                                    <button type="submit" class="btn btn-success">Save</button>
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                    {% endfor %}
                </tr>
            </tbody>
        </table>
    </div>
</div>
{% endif %}
{% endblock %}
