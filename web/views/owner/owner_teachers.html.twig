{% extends "base_private.html.twig" %}

{% block title %}Teachers{% endblock %}

{% block content %}

<div class="jumbotron">
    <h1>Teachers</h1>
    <hr>
</div>

<div class="row">
    <div class="col-md-4">
        <form  id="addteacher" action="/owner_teachers" method="post">
            <div class="panel panel-info">
                <h3  id="addnewteacher" class="panel-heading" >Add New Teacher</h3>
                <div class="panel-body">
                    <div class="form-group">
                        <label for="teacher_name">Name</label><br>
                        <input class="form-control" type="text" name="teacher_name" required><br>
                        <label for="teacher_instrument">Instrument</label><br>
                        <input class="form-control" type="text" name="teacher_instrument" required><br>
                        <button class="btn btn-info btn-sm" type="submit">Submit</button><br>
                    </div>
                </div>
            </div>
        </form>
    </div>

    {% if teachers is not empty %}
    <div id="teachersalign"class="col-md-6">
        <h3>Current Teachers</h3>
        <table class="table table-hover">
            <thead>
                <th>Name</th>
                <th>Instrument</th>
            </thead>
            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td>
                        <a href="owner_teachers/{{teacher.getId | e }}">{{teacher.getName | e }}</a>
                    </td>
                    <td>
                        {{teacher.getInstrument | e }}
                    </td>
                    <td>
                      <button type="button" class="btn btn-sm btn-success" data-toggle="modal" data-target="#update_teacher_{{teacher.getId | e }}">Update</button>
                      <form action="/owner_teachers/teacher_termination/{{ teacher.getId  | e }}" method="post">
                          <input name="_method" type="hidden" value="delete">
                          <button type="submit" class="btn btn-danger btn-sm"  name="button">delete</button>
                      </form>
                    </td>
                </tr>

                <!-- Update Modal -->
                <div id="update_teacher_{{teacher.getId | e }}" class="modal fade" role="dialog">
                    <div class="modal-dialog modal-lg">
                      <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">Update Teacher: {{teacher.getName | e }}</h4>
                            </div>
                            <form action="/owner_teacher/{{teacher.getId | e }}/update" method="post">
                                <div class="row">
                                    <div class="col-xs-12">
                                        <div class="modal-body">
                                            <div class="form-group">
                                                <label for="teacher_name">Name</label>
                                                <input type="text" id="teacher_name" class="form-control" name="teacher_name" value="{{teacher.getName | e }}">
                                            </div>
                                            <div class="form-group">
                                                <label for="instrument">Instruments</label>
                                                <input type="text" id="instrument" class="form-control" name="instrument" value="{{teacher.getInstrument | e }}">
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                          <button type="submit" class="btn btn-success">Save</button>
                                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% endif %}
</div>


{% endblock %}
