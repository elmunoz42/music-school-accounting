{% extends "base_private.html.twig" %}
{% block title %}Create User Account{% endblock %}
{% set pageTitle = "Create Account" %}


{% block content %}
    <form action="/create_user" method="post">
        <div class="form-group">
            <label for="first_name">First Name</label>
            <input id="first_name" class="form-control" type="text" name="first_name" value="" placeholder="First Name">
        </div>
        <div class="form-group">
            <label for="last_name">Last Name</label>
            <input id="last_name" class="form-control" type="text" name="last_name" value="" placeholder="Last Name">
        </div>
        <div class="form-group">
            <label for="email_address">Email</label>
            <input id="email_address" class="form-control" type="email" name="email_address" value="" placeholder="Email">
        </div>
        <div class="form-group">
            <label for="role">Role</label>
            <select id="role" class="form-control" name="role">
              <option value="teacher">Teacher</option>
              <option value="client">Client</option>
            </select>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input id="password" class="form-control" type="password" name="password" value="" placeholder="password">
        </div>
        <div class="form-group">
          <label for="confirm_password">Confirm Password</label>
          <input id="confirm_password" class="form-control" type="password" name="confirm_password" value="" placeholder="confirm_password">
        </div>
        <button class="btn btn-info" type="submit" name="submit">Create Account</button>
    </form>
{% endblock %}
