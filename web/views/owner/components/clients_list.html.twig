
<table class="table table-hover">
    <thead>
        <th>Clients Name</th>
    </thead>
    <tbody>
    {% for account in accounts %}
        <tr>
            <td>
                <a href="owner_account/{{account.getId | e }}">{{ account.getFamilyName | e }}</a>
                <button type="button" class="btn btn-success" data-toggle="modal" data-target="#update_account_{{account.getId | e }}">Update</button>
                <form action="/owner_account/{{ account.getId | e }}/delete" method="post">
                    <input name="_method" type="hidden" value="delete">
                    <button type="submit" class="btn btn-danger btn-sm" name="button">Delete</button>
                </form>
            </td>
        </tr>
        <!-- Update Modal -->
        <div id="update_account_{{account.getId | e}}" class="modal fade" role="dialog">
            <div class="modal-dialog modal-lg">
              <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Update Account: {{account.getFamilyName | e}}</h4>
                    </div>
                    <form action="/owner_account/{{account.getId | e }}/update" method="post">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label for="family_name">Family Name</label><br>
                                        <input class="form-control" id="family_name" type="text" name="family_name" value="{{account.getFamilyName | e}}"><br>
                                    </div>
                                    <div class="form-group">
                                        <label for="parent_one_name">Parent/Guardian Name (primary):</label><br>
                                        <input id="parent_one_name" class="form-control" type="text" name="parent_one_name" value="{{account.getParentOneName | e }}"><br>
                                    </div>
                                    <div class="form-group">
                                        <label for="parent_two_name">Parent/Guardian Name (secondary):</label><br>
                                        <input id="parent_two_name" class="form-control" type="text" name="parent_two_name" value="{{account.getParentTwoName | e }}"><br>
                                    </div>
                                    <div class="form-group">
                                        <label for="street_address">Street Address:</label><br>
                                        <input id="street_address" class="form-control" type="text" name="street_address" value="{{account.getStreetAddress | e}}"><br>
                                    </div>
                                    <div class="form-group">
                                        <label for="phone_number">Phone Number:</label><br>
                                        <input id="phone_number" class="form-control" type="number" name="phone_number" value="{{account.getPhoneNumber | e}}"><br>
                                    </div>
                                    <div class="form-group">
                                        <label for="email_address">Email Address:</label><br>
                                        <input id="email_address" class="form-control" type="email" name="email_address" value="{{account.getEmailAddress | e}}"><br>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="submit" class="btn btn-success">Save</button>
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {% endfor %}
    </tbody>
</table>
