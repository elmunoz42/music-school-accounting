<form  id="addclient" action="/clients" method="post">
    <div class="panel panel-info">
      <h4 class="panel-heading">Create New Client</h4>
        <div class="panel-body">
            <div class="form-group">
                <label  for="family_name">Family Name: </label>
                <input id="family_name" class="form-control" type="text" name="family_name">
            </div>
            <div class="form-group">
                <label  for="parent_one_name">Parent/Guardian Name (primary): </label>
                <input id="parent_one_name" class="form-control" type="text" name="parent_one_name">
            </div>
            <div class="form-group">
                <label  for="parent_two_name">Parent/Guardian Name (secondary): </label>
                <input id="parent_two_name" class="form-control" type="text" name="parent_two_name">
            </div>
            <div class="form-group">
                <label  for="street_address">Street Address: </label>
                <input id="street_address" class="form-control" type="text" name="street_address">
            </div>
            <div class="form-group">
                <label  for="phone_number">Phone Number: </label>
                <input id="phone_number" class="form-control" type="number" name="phone_number">
            </div>
            <div class="form-group">
                <label  for="email_address">Email Address: </label>
                <input id="email_address" class="form-control" type="email" name="email_address">
            </div>
                <input type="hidden" name="notes" value="First entry">
                <input type="hidden" name="billing_history" value="First entry">
                <input type="hidden" name="outstanding_balance" value="0">
            <button class="btn btn-primary" type="submit">create new client</button>
        </div>
    </div>
</form>
